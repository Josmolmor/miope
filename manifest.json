{
  "manifest_version": 3,
  "name": "Miope",
  "version": "1.0",
  "description": "Toggle a blur overlay to the page when the extension icon is clicked.",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "icons/eye-closed-16.png",
    "48": "icons/eye-closed-48.png",
    "128": "icons/eye-closed-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Blur Overlay Extension",
    "default_icon": {
      "16": "icons/eye-16.png",
      "48": "icons/eye-48.png",
      "128": "icons/eye-128.png"
    }
  }
}
